---
import Layout from '../layouts/Layout.astro';
---

<Layout title='Administración Hotelera'> 
  <main class="main">

    <form class="form">
      <h1 class="title">San Andrés</h1>

      <label for="email">Introduce tu email</label>
      <input type="email" placeholder="Email">

      <label for="password">Introduce tu contraseña</label>
      <input type="password" placeholder="Contraseña">
    </form>
  </main>
</Layout>

<style>
  .main {
    /* Ocupa el 100% del tamaño del padre (Body) */
    color: white;
    height: 100%;
    width: 100%; 
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

  .form {
    height: 100%;
    width: 100%; 
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

  .form > input {
    border: purple 1px solid;
    color: white;
    outline: none;
    padding: 10px 20px;
    background-color: #252425;
    color: white#252425;
    border-radius: 30px;
  }

</style>
